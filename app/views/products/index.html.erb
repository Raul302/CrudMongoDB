<h1> Listado de productos</h1>
    <%= link_to 'Nuevo Producto',products_new_path %>
<table>
    <tr>
    <% @products.each do |product| %>
    <thead>
    <th>Nombre<th>
    <th>Descripcion<th>
    <th>Precio<th>
    </thead>
    </tr>
    <tr>
    <td><%= product.name %></td>
    <td><%= product.descripcion %></td>
    <td><%= product.price %></td>
    <td>
    <%= link_to 'Editar',edit_product_path(product) %>
    <%= link_to 'Eliminar',edit_product_path(product), method: :delete, data:{confirm:"Deseas eliminar este articulo?"} %>
    </td>

    <tr>
    <% end %>
</table>